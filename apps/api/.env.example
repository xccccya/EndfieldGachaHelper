# MySQL（本地）
# 数据库名：EFGachaHelperDev
# 注意：请在本地 .env 里填入真实密码（不要提交到仓库）
DATABASE_URL="mysql://root:CHANGE_ME@localhost:3306/EFGachaHelperDev"

# JWT（请自行替换为长随机字符串）
JWT_ACCESS_SECRET="CHANGE_ME"
JWT_REFRESH_SECRET="CHANGE_ME"

# Token 有效期
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="30d"

# SMTP 邮件配置（用于发送验证码）
# 网易企业邮箱示例：smtphz.qiye.163.com:465 (SSL)
# QQ 邮箱示例：smtp.qq.com:465 (SSL)，需要使用授权码
SMTP_HOST="smtp.example.com"
SMTP_PORT=465
SMTP_SECURE="true"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password-or-auth-code"
SMTP_FROM_NAME="终末地抽卡助手"

