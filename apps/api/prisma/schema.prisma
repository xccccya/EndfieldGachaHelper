generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  passwordHash String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  refreshTokens RefreshToken[]
  gameAccounts  GameAccount[]
}

model RefreshToken {
  id          String   @id @default(cuid())
  userId      String
  tokenHash   String
  revokedAt   DateTime?
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model GameAccount {
  id        String   @id @default(cuid())
  userId    String
  /**
   * 云同步账号键：
   * - 新版：uid=roleId（玩家可见 UID），region=serverId（区服）
   * - 旧版（兼容）：uid=hgUid（鹰角内部 uid），region='default'
   */
  uid       String
  region    String
  /** 鹰角内部 uid（用于官方接口换取 u8_token），可为空以兼容云端恢复/旧数据 */
  hgUid     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  gachaRecords GachaRecord[]

  @@unique([userId, uid, region])
  @@index([userId])
  @@index([userId, hgUid])
}

model GachaRecord {
  id            String   @id @default(cuid())
  gameAccountId String

  // 桌面端生成：稳定、可复算，用于幂等去重
  recordUid     String   @unique

  // 通用字段
  category      String   // 'character' | 'weapon'
  poolId        String
  poolName      String
  itemId        String   // charId 或 weaponId
  itemName      String   // charName 或 weaponName
  rarity        Int
  isNew         Boolean  @default(false)
  gachaTs       String   // 原始时间戳字符串
  seqId         String   // 序列 ID
  fetchedAt     BigInt   // 抓取时间戳（毫秒）

  // 角色特有字段
  isFree        Boolean? // 仅角色有

  // 武器特有字段
  weaponType    String?  // 仅武器有

  createdAt     DateTime @default(now())

  gameAccount GameAccount @relation(fields: [gameAccountId], references: [id], onDelete: Cascade)

  @@unique([gameAccountId, seqId, category], name: "unique_gacha_record")
  @@index([gameAccountId, gachaTs])
  @@index([gameAccountId, category])
}

// 邮箱验证码
model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  type      String   // "register" | "reset"
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([email, type])
}

